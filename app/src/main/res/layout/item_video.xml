<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimens_4dp"
    android:layout_marginBottom="@dimen/dimens_4dp"
    android:layout_marginStart="@dimen/dimens_5dp"
    android:layout_marginEnd="@dimen/dimens_5dp"
    app:cardCornerRadius="@dimen/dimens_3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimens_4dp">

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="@dimen/dimens_50dp"
            android:layout_height="@dimen/dimens_50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_action_video"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_3dp"
            android:layout_marginTop="@dimen/dimens_3dp"
            android:layout_marginBottom="@dimen/dimens_3dp"
            android:layout_toStartOf="@+id/play"
            android:layout_toEndOf="@+id/indicator"
            android:gravity="start"
            android:paddingStart="@dimen/dimens_3dp"
            android:singleLine="true"
            android:text="Title"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="@dimen/dimens_3dp"
            android:layout_toStartOf="@+id/play"
            android:layout_toEndOf="@+id/indicator"
            android:gravity="start"
            android:paddingStart="@dimen/dimens_3dp"
            android:paddingEnd="@dimen/dimens_3dp"
            android:singleLine="true"
            android:text="Content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/small_text_size" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="@dimen/dimens_45dp"
            android:layout_height="@dimen/dimens_45dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimens_3dp"
            app:srcCompat="@drawable/ic_action_play"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>